{% include 'header.html.twig'%}
<div class="card mb-3">
	<div class="card-header">
		<i class="fas fa-table"></i>
		Liste des parties
	</div>
	<div class="card-body">
	<div class=pull-right>
		<a href="{{ path('PartieAjouter') }}"><i class="fa fa-plus"></i></a>
	</div>
		<div class="table-responsive">


			<table id="dtBasicExample"  class="table table-striped table-bordered table-sm"  width="100%" cellspacing="0">
				<thead>
					<tr>
						<th>Nom</th>
						<th>Genre</th>
						<th>Date de la partie</th>
						<th></th>
					</tr>
				</thead>
				<tbody>
					{% for e in pParties %}
					<tr>
						<td><a href="{{ path('PartieConsulter', { 'id': e.id }) }}">{{ e.nom }}</a></td>
						<td>{% if e.GenreId %}   {{ e.GenreId.libelle  }}   {% endif %}</td>
						<td>{{ e.date|date('d/m/Y') }}</td>
						<td>
							<a href="{{ path('PartiePlayStart', { 'id': e.id }) }}" target=_blank><i class="fa fa-play"></i></a>
							<a href="{{ path('PartieCloner', { 'id': e.id }) }}"><i class="fas fa-clone"></i></a>
							<a href="{{ path('PartieModifier', { 'id': e.id }) }}"><i class="fa fa-pencil"></i></a>
							<a href="{{ path('PartieSupprimer', { 'id': e.id }) }}"><i class="fa	fa-trash"></i></a>
							<a href="{{ path('PartieStatistique', { 'id': e.id }) }}"><i class="far fa-chart-bar"></i></a>
						</td>
					{% else %}
						<tr>
						<td>Aucune partie n'a été trouvé.</td>
					</tr>
					{% endfor %}
				</tbody>
			</table>
		</div>
	</div>
</div>
<script type="text/javascript">
	$(document).ready(function () {
	$('#dtBasicExample').DataTable();
	$('.dataTables_length').addClass('bs-select');
	});
    </script>

