{% include 'header.html.twig'%}

<div class="panel-body">
{% if partie.modejeux == "TourParTour" %}
	<div class="table-responsive">
		<div class="row">
			<div class="col-sm-10"></div>
		</div>
		<div class="col-sm-12">
		<h4>Question :</h4>
		<table class="table table-bordered table-striped">
			{% for e in questions %}
					<tr>
						<td><h5>{{ e.numero }} - {{ e.libelle }}</h5></td>
						<td></td>
					</tr>
					<tr>
						<td>
							<table class="table table-bordered" id="dataTable-{{ e.numero }}" width="100%" cellspacing="0">
								<thead>
									<tr>
										<th>Nom</th>
										<th>E-mail</th>
										<th>Réponse</th>
										<th>Heure de la réponse</th>
									</tr>
								</thead>
								<tbody>
									{% for i in reponseStat[ e.numero - 1] %}
										<tr>
											<th>{{i.login}}</th>
											<th>{{i.mail}}</th>
											{%if  i.correct%}
											<th class="text-success">{{ i.libelle }}</th>
											{% else %}
											<th class="text-danger">{{ i.libelle }}</th>
											{% endif %}
											<th>{{i.timereponse}}</th>
										</tr>
									{% else %}
									<tr><td>Aucune réponse</td></tr>
									{% endfor %}
								</tbody>
							</table>
						</td>
						<td>
							<div class="col-md-12 align-self-center">'
								<canvas id="DonutReponse-{{ e.numero }}"  ></canvas>'
						  </div>'
						</td>
					</tr>
					{% else %}
					<tr><td>Aucune question</td></tr>
					{% endfor %}
				</table>

				<table class="table table-bordered table-striped">
				<thead>
					<tr>
						<th>Nom</th>
						<th>Score</th>
					</tr>
				</thead>
				<tbody>
					{% for i in score %}
						<tr>
							<th>{{i.login}}</th>
							<th>{{i.score}}</th>
						</tr>
					{% else %}
					<tr><td>Aucun joueur</td></tr>
					{% endfor %}
				</tbody>

				</table>
			</div>
		</div>
	</div>
	</div>
	<script type="text/javascript" src="{{ asset('') }}js/StatModeTourParTour.js"></script>
	<script>
	</script>
{% else %}
<div class="alert alert-info" role="alert">
  Aucune statistique pour ce mode de jeux.
</div>

{% endif %}
</div>
{% include 'footer.html.twig'%}
